<h2>状态</h2>
<div class="contextual">
<%= link_to '创建主线分支', {:controller => 'trunk', :action => 'new', :id => @project}, :class => 'icon icon-add' %>
</div>
<big>
目前划分:<br />
<hr />
</big>

<div class="trunk">
<table class="list">
  <thead>
		<tr>
			<%= sort_header_tag('repository_name', :caption => "主线") %>
			<%= sort_header_tag('branches', :caption => "分支") %>
			<%= sort_header_tag('tags', :caption => "标签") %>
			<%= sort_header_tag('creater', :caption => "创建者") %>
			<%= sort_header_tag('status', :caption => "状态") %>
			<th>操作</th>
		</tr>
		</thead>
  <tbody>
	<% for trunk in @trunk -%>
		<tr class="trunk odd">
			<td align="center" class="repository_name"><%= h(trunk.repository_name) %></td>
			<td align="center" class="branches"><%= h(trunk.branches) %></td>
			<td align="center" class="tags"><%= h(trunk.tags) %></td>
			<td align="center" class="creater"><%= h(trunk.creater) %></td>
			<td align="center" class="status"><%= h(format_status(trunk)) %></td>
			<td align="center"><small><%= change_status_link(trunk) %></small></td>
		</tr>
	<% end -%>
  </tbody>
</table>
</div>
