<div class="svnmanage">
<table class="list">		
  <tbody>
<% list_number = 1 %>
	<thead><tr>
	<%= sort_header_tag('svnpath', :caption => "路劲") %>
	<%= sort_header_tag('wrstatus', :caption => "读写状态") %>
	<%= sort_header_tag('delete', :caption => "是否删除？") %>
  	</tr></thead>
<% for member in @member -%>
	<% for user in @user -%>
		<% if ((@login11 == 'liuchl')||(@login11 == 'liuxiaowei')||(@login11 == 'lipengmt')||(@login11 == 'hehy'))&&(user.id==member.user_id) %>
			<tr class="user" bgcolor="#F5DEB3" <%= cycle("odd", "even") %>%> 
		   	<td align="left" class="user"><%= "#{list_number}."%><%=h(user) %><%= "：所拥有权限如下："%></td>
		   	<td align="center"> </td>
	   	   	<td align="right" class="add"><%=link_to '新增权限路劲', {:controller => 'svnmanage', :action => 'allocation', :id => @project, :user => user[:login] },:class => 'icon icon-add' %></td>
			</tr>
			<% list_number += 1 %>
			<% for svnmanage in @svnmanage -%>
				<% if user.login == svnmanage.login %>
		  		<tr class="svnmanage" <%= cycle("odd", "even") %>%> 
				<td align="center" class="svnpath"><%= h(svnmanage.svnpath) %></td>
				<td align="center" class="wrstatus"><%= h(svnmanage.wrstatus) %></td>
				<td align="center" class="delete"><%=link_to '删除', {:controller => 'svnmanage', :action => 'destroy', :id => @project , :svnpath => svnmanage[:svnpath] ,:login => svnmanage[:login] }, :confirm => "您确定要删除此授权项?", :method => :post, :class => 'icon icon-del' %></td>
		  		</tr>
		  		<% end %>
			<% end %>
			<tr><td><hr \></td><td><hr \></td><td><hr \></td></tr>
	  <% end %>
  <% end -%>
<% end -%>
  </tbody>
</table>
</div>
